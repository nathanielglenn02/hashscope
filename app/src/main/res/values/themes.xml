<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.HashScope" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#000000</item> <!-- Warna utama hitam -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Warna teks putih -->
        <item name="bottomNavigationStyle">@style/Widget.HashScope.BottomNavigationView</item>
    </style>

    <!-- Tema aplikasi utama -->
    <style name="Theme.HashScope" parent="Base.Theme.HashScope">
        <!-- Inherit semua properti dari Base.Theme.HashScope -->
    </style>

    <!-- Style untuk tombol -->
    <style name="Widget.HashScope.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#000000</item> <!-- Warna latar belakang tombol hitam -->
        <item name="android:textColor">#FFFFFF</item> <!-- Warna teks tombol putih -->
    </style>

    <!-- Style untuk BottomNavigationView -->
    <style name="Widget.HashScope.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/white</item> <!-- Latar belakang putih -->
        <item name="itemIconTint">@color/black</item> <!-- Warna ikon -->
        <item name="itemTextColor">@color/black1</item> <!-- Warna teks -->
    </style>
</resources>
